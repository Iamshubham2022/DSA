}


#include <bits/stdc++.h>
using namespace std;
int main() {
    string s;
    cout<<"enter a sentence"<<endl;
    getline(cin,s);
    if(s.find("shubham")!=string::npos){
        cout<<"yes"<<endl;
    }
    cout<<"the sentence is : "<<s<<endl;
    return 0;
}

string text = "Hello, world!";
string result = text.substr(7, text.npos); // Get the rest of the string from position 7
cout << result << endl; // Output: "world!"

