int main() {
    string input = "123 456 789";
    stringstream ss(input);  //ss can be any name 

    int num;
    while (ss >> num) {
        cout << "Extracted number: " << num <<endl;
    }

    //if you want to single word from the given sentence you can 
    // also use the above thing by apllying some condition.
    return 0;
}

#include <iostream>
#include <string>

